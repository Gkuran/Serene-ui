{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "es6", "es2016"],

    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "jsx": "react-jsx",
    "declaration": true,
    "outDir": "dist",
    "module": "esnext"
  },
  "include": ["stories/**/*", "theme.ts", "index.ts"],
  "exclude": ["**/*.stories.tsx", "dist", "node_modules"]
}
